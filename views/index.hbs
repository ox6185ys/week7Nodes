<title>Currency Converter</title>

<h1>Currency Converter</h1>

<form action="/convert" method="GET">
    <!-- This is where user inputs amount to be converted. -->
    <label for="dollar">Currency Amount</label>
    <input type="number" step="any" name="dollar_amount" id="dollar"/>
    <br>
    <!-- This is where user selects the nativeFX. -->
    <label for="from_currency">Convert from</label>
    <select name="from_currency" id="from_currency">
        <!-- These are pull down selections. -->
        <option value="USD">US Dollars</option>
        <option value="GBp">British Pound</option>
        <option value="EUR">Euros</option>
        <option value="JPY">Japanese Yen</option>
    </select>

    <br>

    <label for="to_currency">Convert to</label>
    <select name="to_currency" id="to_currency">

        <option value="USD">US Dollars</option>
        <option value="GBp">British Pound</option>
        <option value="EUR">Euros</option>
        <option value="JPY">Japanese Yen</option>
    </select>
    <br>

    <button type="submit">Convert</button>
